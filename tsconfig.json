{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "lib": ["es5", "es6", "dom"],
    "module": "esNext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "custom-elements-ts": ["src/custom-element"]
    },
    "removeComments": true,
    "target": "es6"
  },
  "include": [
    "./**/*.ts"
  ]
}